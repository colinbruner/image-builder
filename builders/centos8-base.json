{
  "variables": {
    "image_build": "base",
    "version": "8.1.1911",
    "deploy_password": "CHANGEME"
  },

  "builders":
  [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "headless": true,
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-smp", "cpus=2,maxcpus=16,cores=4" ]
      ],
      "disk_interface": "virtio",
      "disk_size": 50000,
      "format": "qcow2",
      "net_device": "virtio-net",

      "iso_urls": [
        "iso/CentOS-{{ user `version` }}-x86_64-dvd1.iso",
        "http://mirror.cogentco.com/pub/linux/centos/{{ user `version` }}/isos/x86_64/CentOS-{{ user `version` }}-x86_64-dvd1.iso"
      ],
      "iso_checksum_url": "http://mirror.cogentco.com/pub/linux/centos/{{ user `version` }}/isos/x86_64/CHECKSUM.asc",
      "iso_checksum_type": "sha256",

      "vnc_bind_address": "0.0.0.0",

      "vm_name": "centos8-{{ user `image_build` }}.img",
      "output_directory": "images/{{ user `image_build` }}",

      "http_directory": "http",
      "http_port_min": 10090,
      "http_port_max": 10096,

      "ssh_host_port_min": 2230,
      "ssh_host_port_max": 2236,

      "ssh_username": "deploy",
      "ssh_password": "{{ user `deploy_password` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "1200s",

      "boot_wait": "40s",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos8-ks.cfg<enter><wait>"
      ],

      "shutdown_command": "echo '{{ user `deploy_password` }}' | sudo -S /sbin/halt -h -p"
    }
  ],

  "provisioners":
  [
    {
      "type": "shell",
      "execute_command": "echo '{{ user `deploy_password` }}' | sudo -S bash {{ .Path }}",
      "script": "scripts/{{ user `image_build` }}.sh"
    }
  ]
}
